<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hull.mapper.UserInfoBaseMapper">
	<!--查询字段-->
	<sql id="columns">
	    a.`id`,
	    a.`name`,
	    a.`password`,
	    a.`verify_code`,
	    a.`mobile`,
	    a.`created`,
	    a.`modified`
	</sql>
	
	<!--查询结果集-->
	<resultMap id="beanMap" type="com.hull.entity.UserInfo">
	    <result property="id" column="id"/>
	    <result property="name" column="name"/>
	    <result property="password" column="password"/>
	    <result property="verifyCode" column="verify_code"/>
	    <result property="mobile" column="mobile"/>
	    <result property="created" column="created"/>
	    <result property="modified" column="modified"/>
	</resultMap>
	
	<!--根据主键获取实体-->
	<select id="get" resultMap="beanMap">
	  SELECT
		<include refid="columns"/>
	  FROM
		user_info a
	  WHERE 
	     id = #{id}
	</select>

	<select id="select" resultMap="beanMap">
		SELECT
		<include refid="columns"/>
		FROM
			user_info a
		WHERE 1=1
		<if test="name != null">
			AND `name` = #{name}
		</if>
		<if test="password != null">
			AND `password` = #{password}
		</if>
		<if test="verifyCode != null">
			AND `verify_code` = #{verifyCode}
		</if>
		<if test="mobile != null">
			AND `mobile` = #{mobile}
		</if>
	</select>
    
	<!-- 新增记录 -->
	<insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="com.hull.entity.UserInfo">
	  INSERT INTO user_info 
	    (
	    `name`,
	    `password`,
	    `verify_code`,
	    `mobile`		
	    )
	   VALUES 
	   (
	    #{name},
	    #{password},
	    #{verifyCode},
	    #{mobile}		
	   )
	</insert>
    
    
    <!--更新实体信息-->
    <update id="update" parameterType="com.hull.entity.UserInfo">
      UPDATE 
      	user_info 
      SET 
        `name` = #{name},
        `password` = #{password},
        `verify_code` = #{verifyCode},
        `mobile` = #{mobile}      
      WHERE  id = #{id}
    </update>
    
    <!--更新实体信息，null值字段不更新-->
    <update id="updateIgnoreNull" parameterType="com.hull.entity.UserInfo">
        UPDATE user_info 
        <set>
          <if test="name != null">
           `name` = #{name},
      	  </if>
          <if test="password != null">
           `password` = #{password},
      	  </if>
          <if test="verifyCode != null">
           `verify_code` = #{verifyCode},
      	  </if>
          <if test="mobile != null">
           `mobile` = #{mobile},
      	  </if>
        </set>
        WHERE   id = #{id}
    </update>
    
    <!--根据主键删除实体-->
    <delete id="delete">
      DELETE FROM user_info WHERE  id = #{id}
    </delete>
</mapper>