<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hull.mapper.ClassInfoMapper">
	<!--查询字段-->
	<sql id="columns">
	    a.`id`,
	    a.`class_no`,
	    a.`class_name`,
	    a.`type`,
	    a.`status`,
	    a.`allow_time`
	</sql>
	
	<!--查询结果集-->
	<resultMap id="beanMap" type="com.hull.entity.ClassInfo">
	    <result property="id" column="id"/>
	    <result property="classNo" column="class_no"/>
	    <result property="className" column="class_name"/>
	    <result property="type" column="type"/>
	    <result property="status" column="status"/>
	    <result property="allowTime" column="allow_time"/>
	</resultMap>
	
	<!--根据主键获取实体-->
	<select id="get" resultMap="beanMap">
	  SELECT
		<include refid="columns"/>
	  FROM
		class_info a
	  WHERE 
	     id = #{id}
	</select>

	<select id="select" resultMap="beanMap">
		SELECT
		<include refid="columns"/>
		FROM
		class_info a
		WHERE  1=1
		<if test="id != null">
			AND `id` = #{id}
		</if>
		<if test="classNo != null">
			AND `class_no` = #{classNo}
		</if>
		<if test="className != null">
			AND `class_name` = #{className}
		</if>
		<if test="type != null">
			AND `type` = #{type}
		</if>
		<if test="status != null">
			AND `status` = #{status}
		</if>
		<if test="allowTime != null">
			AND `allow_time` = #{allowTime}
		</if>
	</select>
    
	<!-- 新增记录 -->
	<insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="com.hull.entity.ClassInfo">
	  INSERT INTO class_info 
	    (
	    `class_no`,
	    `class_name`,
	    `type`,
	    `status`,
	    `allow_time`		
	    )
	   VALUES 
	   (
	    #{classNo},
	    #{className},
	    #{type},
	    #{status},
	    #{allowTime}		
	   )
	</insert>
    
    <!--更新实体信息，null值字段不更新-->
    <update id="updateIgnoreNull" parameterType="com.hull.entity.ClassInfo">
        UPDATE class_info 
        <set>
          <if test="classNo != null">
           `class_no` = #{classNo},
      	  </if>
          <if test="className != null">
           `class_name` = #{className},
      	  </if>
          <if test="type != null">
           `type` = #{type},
      	  </if>
          <if test="status != null">
           `status` = #{status},
      	  </if>
          <if test="allowTime != null">
           `allow_time` = #{allowTime},
      	  </if>
        </set>
        WHERE   id = #{id}
    </update>
    
    <!--根据主键删除实体-->
    <delete id="delete">
      DELETE FROM class_info WHERE  id = #{id}
    </delete>
</mapper>